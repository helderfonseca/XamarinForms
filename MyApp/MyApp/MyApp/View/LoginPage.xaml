<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.View.LoginPage"
             BackgroundColor="#C032">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand"
            Padding="30">

            <Entry Placeholder="Digita o username" BackgroundColor="#FFFFFF" PlaceholderColor="#C359" Text="{Binding Username}"/>
            <Entry Placeholder="Digita a password" IsPassword="True" BackgroundColor="#FFFFFF" PlaceholderColor="#C359" Text="{Binding Password}"/>
            <Button BackgroundColor="#F0C5" TextColor="#FFFFFF" Text="ENTRAR" Command="{Binding EntrarCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


